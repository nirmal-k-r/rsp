<%- include('Partials/header') %>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery.form/3.51/jquery.form.min.js"></script>
    <main>
        <div id="primary" class="height-full responsive-phone">
            <div class="container">
                <div class="row">
                    
                    <div class="col-lg-6 p-t-100 mx-auto">
                        <% if (message!=""){ %>
                            <div class="col-lg-10 ">
                                <%if (message.type=='Success'){ %>
                                    <div role="alert" class="alert alert-success">
                                <% }else{ %>
                                    <div role="alert" class="alert alert-danger">
                                <% } %>
                                        <font color='black'>
                                            <%= message.msg %>
                                        </font>
                                     </div>
                                    </div>
                         <% } %>
                                        <div>
                                            <img src="/img/shopping.jpg">
                                            <h1 style="text-align:center">Responsible Shopping System</h1>
                                            <!-- <p class="s-18 p-t-b-20 font-weight-lighter">Sign in to access the dashboard -->
                                                <br>
                                            </p>
                                        </div>
                                        <form name="signin" action="/authentication/auth" method="post">
                                            <div class="row">
                                                <div class="col-lg-12">
                                                    
                                                    <div class="form-group has-icon"><i class="material-icons">account_circle</i><input type="text" style="color:#000000;" class="login-control form-control-lg" name="un" placeholder="Username" required></div>
                                                
                                                    <br>
                                                    <div class="form-group has-icon"><i class="material-icons alignicons">lock_open</i>
                                                        <input type="password" style="color:#000000;" class="login-control form-control-lg" name="pw" placeholder="Password" required></div>
                                                </div>

                                            </div>
                                            <br><br>
                                            <div class="row">
                                                <div class="col-lg-4">
                                                    <a class="btn btn-secondary text-light btn-lg btn-block" data-toggle="modal" href="#register" style="margin-bottom: 10px">Register</a>
                                                </div>
                                                <div class="col-lg-8">
                                                    <input type="submit" class="btn btn-info btn-lg btn-block text-light" value="Sign In">
                                                </div>
                                            </div>
                                        </form>
                            </div>
                    </div>
                </div>
            </div>

            <div class="modal fade" id="register" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog modal-lg" role="document">
                    <div class="modal-content no-r "><a href="#" data-dismiss="modal" aria-label="Close" class="paper-nav-toggle active"><i></i></a>
                        <div class="modal-body no-p">
                            <div class="row">
                             
                                <div class="col-lg-12 mx-auto">
                                    <img src="/img/shopping.jpg" width="100%">
                                    <div class="text-center p-b-40">
                                        <h5 class="">Register for RSP</h5>
                                        <p>Kindly enter your details to proceed.</p>
                                    </div>

                                    <div class="light ">
                                        <div class="p-40">
                                            <form name="registration" action="authentication/register" method="post">
                                                <div class="form-group"> <input type="text" class="form-control form-control-lg" placeholder="User Name" name="uname" minlength="4" maxlength="10" onkeypress="return check_input(event)" required></div>
                                                <div class="form-group"><input type="password" class="form-control form-control-lg" placeholder="Password" name="pw" minlength="4" maxlength="25" required></div>
                                                <div class="form-group"> <input type="text" class="form-control form-control-lg" placeholder="Full Name" name="full_name" required></div>
                                               
                                                <br>
                                               
                                                <div class="g-recaptcha" data-sitekey="6Lfuto0UAAAAAE0-o6Yc5faCeDXBuOhbCD_VuXkZ"></div>
                                                <br>
                                                <input type="submit" class="btn btn-dark btn-lg btn-block" value="Register">
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </main>

    <script>
        function check_input(e) {
            var k;
            document.all ? k = e.keyCode : k = e.which;
            return ((k > 64 && k < 91) || (k > 96 && k < 123) || k == 8 || k == 32 || (k >= 48 && k <= 57));
        }
        $(document).ready(function() {
            $('#reg-form').submit(function() {
                $(this).ajaxSubmit({
                    error: function(xhr) {
                        status('Error: ' + xhr.status);
                    },
                    success: function(response) {
                        console.log(response);
                    }
                });
                //Very important line, it disable the page refresh.
                return false;
            });
        });
    </script>

<%- include('Partials/footer') %>